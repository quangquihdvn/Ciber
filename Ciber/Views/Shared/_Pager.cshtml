@using Ciber.Model.SeedWork
@model PagingSP

<div class="container">
    @if(Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if(Model.PageIndex > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageIndex="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
                </li>
            }

            @for(var pge = 1; pge <= Model.TotalPages; pge++)
            {
                <li class="page-item @(pge == Model.PageIndex ? "active" : "")">
                    <a class="page-link" 
                    asp-controller="Order" 
                    asp-action="Index" 
                    asp-route-pageIndex="@pge" 
                    asp-route-orderBy="@ViewData["orderByValue"]"
                    asp-route-nextPage="true"
                    asp-route-orderByDesc="@ViewData["orderByDescValue"]"
                    > @pge</a>
                </li>
            }

            @if(Model.PageIndex < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageIndex="@(Model.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>
