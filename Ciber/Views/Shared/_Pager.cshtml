@using Ciber.Model.SeedWork
@model PagingSP

<div class="container">
    @if(Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if(Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageIndex="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageIndex="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for(var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" 
                    asp-controller="Order" 
                    asp-action="Index" 
                    asp-route-pageIndex="@pge" 
                    asp-route-currentFilter="@ViewData["nextPage"]"
                    asp-route-orderBy="@ViewData["orderByValue"]" 
                    asp-route-orderByDesc="@ViewData["orderByDescValue"]"
                    > @pge</a>
                </li>
            }

            @if(Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageIndex="@(Model.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Order" asp-action="Index" asp-route-pageIndex="@(Model.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>
