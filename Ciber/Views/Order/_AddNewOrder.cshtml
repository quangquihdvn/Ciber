@using Ciber.Models.Request
@model AddOrderRequest
<div class="modal fade" id="addOrder" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Create New Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="OrderName"></label>
                        <div>
                            <span class="text-danger" asp-validation-for="OrderName"></span>
                        </div>
                        <input class="form-control" asp-for="OrderName" cols="15" rows="10" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductId">Product</label>
                        <div>
                            <span class="text-danger" asp-validation-for="ProductId"></span>
                        </div>
                        <select asp-for="ProductId" asp-items="ViewBag.Products"style="width:100%">
                            <option disabled>Choose the product</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerId">Customer</label>
                        <div>
                            <span class="text-danger" asp-validation-for="CustomerId"></span>
                        </div>
                        <select asp-for="CustomerId" asp-items="ViewBag.Customers" style="width:100%">
                            <option disabled>Choose the product</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderDate"></label>
                        <div>
                            <span class="text-danger" asp-validation-for="OrderDate"></span>
                        </div>
                        <input class="form-control" asp-for="OrderDate" cols="15" rows="10"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount"></label>
                        <div>
                            <span class="text-danger" asp-validation-for="Amount"></span>
                        </div>
                        <input class="form-control" asp-for="Amount" cols="15" rows="10" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
